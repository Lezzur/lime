# LIME Environment Configuration
# Copy this file to .env and fill in your values

# --- Transcription ---
# Cloud provider: "deepgram" | "assemblyai"
TRANSCRIPTION_PROVIDER=deepgram
DEEPGRAM_API_KEY=your_deepgram_api_key_here
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Local transcription model: "large-v3" | "medium" | "small" | "base" | "auto"
# "auto" detects available VRAM and picks the best model
WHISPER_MODEL=auto

# --- Diarization ---
# Required for pyannote.audio (get token at hf.co)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# --- Database ---
DATABASE_URL=sqlite:///./data/db/lime.db

# --- Audio ---
# Input device index (leave empty to use system default)
MIC_DEVICE_INDEX=
# System audio loopback device index (WASAPI loopback on Windows)
SYSTEM_AUDIO_DEVICE_INDEX=

# --- Server ---
API_HOST=127.0.0.1
API_PORT=8000

# --- Storage ---
AUDIO_DIR=./data/audio
EXPORTS_DIR=./data/exports
MEMORY_DIR=./memory
